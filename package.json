{
  "name": "todo-cache",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo para Todo-Cache com Bun e TypeScript",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:backend": "bun --filter ./packages/backend dev",
    "dev:frontend": "bun --filter ./packages/frontend dev",
    "build:backend": "bun install --filter './packages/backend/' ",
    "build:frontend": "bun install --filter './packages/frontend/' ",
    "build:all": "bun install",
    "clean": "rm -rf node_modules packages/*/node_modules"
  },
  "devDependencies": {
    "typescript": "^5.0.0"
  }
}
